<%- include("../templates/header") -%>
<div class="container">
<div class="box">
  <form action="/add-question" method="post">
    <div class="form-group">
      <label for="questionTitle" class="label">Title</label>
      <input type="text" name="questionTitle" class="form-control" placeholder="Enter Title Here">
    </div>
    <div class="form-group">
      <label for="questionDescription" class="label">Description</label>
      <input type="text" name="questionDescription" class="form-control" placeholder="Enter Description Here">
    </div>
    <div class="form-group">
      <label for="questionImageURL" class="label">Image URL</label>
      <input type="url" name="questionImageURL" class="form-control" placeholder="Enter Image URL Here">
    </div>
    <button type="submit" name="submit" class="btn btn-lg btn-danger">Ask</button>
  </form>
</div>

<%- include("../templates/footer") -%>
